@model ClienteModel
@{
    var action = Context.Request.RouteValues.ContainsKey("id") ? 
        "Alteração de Cliente":
        "Cadastro de Cliente";
    var statusList = new List<SelectListItem>() { 
        new SelectListItem {Value = "0", Text = "Inativo"},
        new SelectListItem {Value = "1", Text = "Ativo"}
        };
}


<Header class="d-flex justify-content-between align-items-lg-center">
    <div>
        <h1 class="text-primary">@action</h1>
    </div>
</Header>
<hr>

<form asp-action="Cadastrar">
    <input type="hidden" asp-for="@Model.IdUsuario">
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="Nome">Nome: </label><br>
        <input asp-for="@Model.Nome" class="form-control" autofocus>
        <span asp-validation-for="@Model.Nome" class="text-danger"></span>
    </div>

    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.CPF">CPF: </label><br>
        <input asp-for="@Model.CPF" class="form-control">
        <span asp-validation-for="@Model.CPF" class="text-danger"></span>
    </div>

    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.DataNascimento">Data Nascimento: </label><br>
        <input asp-for="@Model.DataNascimento" class="form-control" type="date">
        <span asp-validation-for="@Model.DataNascimento" class="text-danger"></span>
    </div>

    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Email">E-Mail: </label><br>
        <input asp-for="@Model.Email" class="form-control">
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>

    @if (!Context.Request.RouteValues.ContainsKey("id"))
    {
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Senha">Senha: </label><br>
        <input asp-for="@Model.Senha" class="form-control" type="password">
        <span asp-validation-for="@Model.Senha" class="text-danger"></span>
    </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-light">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>